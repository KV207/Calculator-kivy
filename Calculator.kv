HomeScreen:


<HomeScreen>:
    BoxLayout:
        orientation:'vertical'
        padding: '20dp'
        spacing:'20dp'
        
        Label:
            id:DisplayScreen
            color:(128/255,128/255,128/255,1)
            text:'0.0'
            text_size: self.size
            size_hint: 1,2
            font_name: 'DS-DIGI.ttf'
            font_size: '60dp'
            halign: 'right'
            valign: 'middle'

        ScrollView:
            size_hint: 1,3
            TextInput:
                id:FormulaScreen
                hint_text:'Enter the Formula'
                text_size: self.size
                font_name: 'DS-DIGI.ttf'
                font_size: '60dp'
                halign: 'right'
                valign: 'middle'

        
        BoxLayout:
            spacing:'20dp'

            Button:
                text:'C'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'%'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'DEL'
                on_press: FormulaScreen.text = FormulaScreen.text[0:-1]
            Button:
                text:'/'
                on_press: FormulaScreen.text += self.text

        BoxLayout:
            spacing:'20dp'

            Button:
                text:'7'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'8'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'9'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'*'
                on_press: FormulaScreen.text += self.text

        BoxLayout:
            spacing:'20dp'

            Button:
                text:'4'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'5'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'6'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'-'
                on_press: FormulaScreen.text += self.text

        BoxLayout:
            spacing:'20dp'

            Button:
                text:'1'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'2'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'3'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'+'
                on_press: FormulaScreen.text += self.text

        BoxLayout:
            spacing:'20dp'

            Button:
                text:'0'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'00'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'.'
                on_press: FormulaScreen.text += self.text
            Button:
                text:'='
                on_press: root.calculation(FormulaScreen.text)

        
        
